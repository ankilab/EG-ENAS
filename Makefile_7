ifndef submission
$(error submission is undefined)
endif

build:
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7/predictions
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7/datasets
	rsync -ar --exclude='**/test_y.npy' datasets/* /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7/datasets/
	cp -R evaluation/main.py /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7/main.py
	cp -R $(submission)/* /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7

run:
	cd /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7; python3 main.py --mode T7 --select_augment Proxy

score:
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring7
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring7
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring7/labels
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring7/predictions
	rsync -avr --exclude='**/*x.npy' --exclude='**/train*.npy' --exclude='**/valid*.npy'   --include='**/test_y.npy' datasets/* /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring7/labels/
	cp -R /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7/predictions /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring7
	cp evaluation/score.py /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring7/score.py
	cd /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring7; python3 score.py

clean:
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring7
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package7

zip:
	cd $(submission);  zip -r ../submission.zip *

all: clean build run score