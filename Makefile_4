ifndef submission
$(error submission is undefined)
endif

build:
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4/predictions
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4/datasets
	rsync -ar --exclude='**/test_y.npy' datasets/* /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4/datasets/
	cp -R evaluation/main.py /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4/main.py
	cp -R $(submission)/* /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4

run:
	cd /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4; python3 main.py --mode T4 --select_augment Proxy

score:
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring4
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring4
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring4/labels
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring4/predictions
	rsync -avr --exclude='**/*x.npy' --exclude='**/train*.npy' --exclude='**/valid*.npy'   --include='**/test_y.npy' datasets/* /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring4/labels/
	cp -R /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4/predictions /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring4
	cp evaluation/score.py /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring4/score.py
	cd /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring4; python3 score.py

clean:
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring4
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package4

zip:
	cd $(submission);  zip -r ../submission.zip *

all: clean build run score