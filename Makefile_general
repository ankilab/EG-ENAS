ifndef submission
$(error submission is undefined)
endif

build:
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package/predictions
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package/datasets
	rsync -ar --exclude='**/test_y.npy' datasets/* /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package/datasets/
	cp -R evaluation/main.py /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package/main.py
	cp -R $(submission)/* /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package

run:
	cd /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package; python3 main.py 

score:
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring/labels
	mkdir /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring/predictions
	rsync -avr --exclude='**/*x.npy' --exclude='**/train*.npy' --exclude='**/valid*.npy'   --include='**/test_y.npy' datasets/* /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring/labels/
	cp -R /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package/predictions /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring
	cp evaluation/score.py /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring/score.py
	cd /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring; python3 score.py

clean:
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/scoring
	rm -Rf /home/woody/iwb3/iwb3021h/THESIS_RESULTS/package

zip:
	cd $(submission);  zip -r ../submission.zip *

all: clean build run score